<!DOCTYPE html>
<html>
<head>
  <title>dashMe</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
</head>
<body>
<% flash.each do |key, value| %>
  <% if key == "notice" %>
    <%= content_tag :div, value, class: "text-center alert alert-warning" %>
  <% elsif key == "alert" %>
    <%= content_tag :div, value, class: "text-center alert alert-danger" %>
  <% else %>
    <%= content_tag :div, value, class: "text-center alert alert-success" %>
  <% end %>
<% end %>



<!-- <div class="dragContainer container-fluid" id="dragContainer"> -->
  
  <%= render 'shared/aboutUs' %>
  <%= render 'shared/twitterconnect' %>

  <% if current_user %>
    <%= render 'shared/todo' %>
    
    <div class="stats">
      <%= render 'shared/weather' %>
    </div>
    <%= render 'shared/options' %>
  <!-- </div> -->


    <%= render 'shared/twitterFeed' %>

  
  <%= render 'shared/clock' %>

  <%= yield %>

  <%= render 'shared/goaloftheDay' %>
  <%= render 'shared/greeting' %>
  <%= render 'shared/quote' %>

<% end %>

<!-- <script src="assets/javascripts/skycons.js"></script> -->
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

</body>
</html>
