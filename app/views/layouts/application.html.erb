<!DOCTYPE html>
<html>
<head>
  <title>Twitterauth</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% flash.each do |key, value| %>
  <% if key == "notice" %>
    <%= content_tag :div, value, class: "text-center alert alert-warning" %>
  <% elsif key == "alert" %>
    <%= content_tag :div, value, class: "text-center alert alert-danger" %>
  <% else %>
    <%= content_tag :div, value, class: "text-center alert alert-success" %>
  <% end %>
<% end %>



<div class="dragContainer" id="dragContainer">
<%= render 'shared/clock' %>
<%= render 'shared/todo' %>
<%= render 'shared/twitterconnect' %>
</div>

<%= render 'shared/newTweet' %>
<%= yield %>

</body>
</html>
